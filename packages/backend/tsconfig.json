{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "shared/*": ["../shared/src/*"]
    },
    "module": "commonJS",
    "target": "ES2020",
    "esModuleInterop": true,
    "lib": ["es2020"],
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "../"
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules"]
}
